{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs", // or "Node16"
    "moduleResolution": "node", // or "Node16"
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "include": [
    "src/**/*"
  ]
}